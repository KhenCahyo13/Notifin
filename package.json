{
    "name": "@khencahyo13/notifin-react",
    "version": "1.2.2",
    "description": "Function-first alert dialog library for React, built on Radix Alert Dialog primitives with bundled styles and optional theme overrides.",
    "type": "module",
    "main": "./dist/notifin.cjs",
    "module": "./dist/notifin.js",
    "style": "./dist/notifin.css",
    "types": "./dist/index.d.ts",
    "exports": {
        ".": {
            "types": "./dist/index.d.ts",
            "import": "./dist/notifin.js",
            "require": "./dist/notifin.cjs"
        },
        "./style.css": "./dist/notifin.css"
    },
    "sideEffects": [
        "**/*.css"
    ],
    "files": [
        "dist"
    ],
    "scripts": {
        "build": "vite build",
        "dev": "vite",
        "lint": "eslint .",
        "prettier": "prettier --check .",
        "prettier:fix": "prettier --write .",
        "test": "vitest run",
        "test:e2e": "vitest run src/e2e/consumer.test.ts",
        "test:watch": "vitest",
        "typecheck": "tsc --noEmit"
    },
    "keywords": [
        "react",
        "alert-dialog",
        "radix",
        "alert",
        "toast",
        "notification",
        "tailwindcss"
    ],
    "homepage": "https://notifin-react.vercel.app",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/KhenCahyo13/Notifin-React"
    },
    "bugs": {
        "url": "https://github.com/KhenCahyo13/Notifin-React/issues"
    },
    "author": "",
    "license": "ISC",
    "packageManager": "pnpm@10.28.0",
    "dependencies": {
        "@radix-ui/react-alert-dialog": "^1.1.15",
        "@radix-ui/react-visually-hidden": "^1.2.4",
        "clsx": "^2.1.1",
        "tailwind-merge": "^3.5.0"
    },
    "devDependencies": {
        "@eslint/js": "^9.39.3",
        "@types/react": "^19.2.14",
        "@types/react-dom": "^19.2.3",
        "@vitejs/plugin-react": "^5.1.4",
        "eslint": "^9.39.3",
        "eslint-plugin-perfectionist": "^5.6.0",
        "eslint-plugin-react-hooks": "^7.0.1",
        "eslint-plugin-react-refresh": "^0.5.2",
        "eslint-plugin-simple-import-sort": "^12.1.1",
        "globals": "^17.3.0",
        "prettier": "^3.8.1",
        "react": "^19.2.4",
        "react-dom": "^19.2.4",
        "typescript": "^5.9.3",
        "typescript-eslint": "^8.56.1",
        "vite": "^7.3.1",
        "vite-plugin-dts": "^4.5.4",
        "vitest": "^4.0.18"
    },
    "peerDependencies": {
        "react": ">=18",
        "react-dom": ">=18"
    }
}
